# ============================================================================
# Literature Review RAG - Environment Variables
# ============================================================================
# Copy this file to .env and customize your settings
# Environment variables override settings in literature_config.yaml

# ----------------------------------------------------------------------------
# DATA PATHS
# ----------------------------------------------------------------------------
# Path to your academic PDFs (organized by phase/topic)
PDF_PATH=/Users/fadzie/Desktop/lit_rag

# Path to store generated indices
INDICES_PATH=./indices

# Path to configuration file
CONFIG_PATH=./config/literature_config.yaml

# ----------------------------------------------------------------------------
# API CONFIGURATION
# ----------------------------------------------------------------------------
# API server host
API_HOST=0.0.0.0

# API server port (different from personality RAG: 8000)
API_PORT=8001

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ----------------------------------------------------------------------------
# DATABASE
# ----------------------------------------------------------------------------
DATABASE_URL=sqlite:///./data/db/literature_rag.db

# ----------------------------------------------------------------------------
# AWS S3 CONFIGURATION (Required for production)
# ----------------------------------------------------------------------------
AWS_S3_BUCKET=lit-rag-flow
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ----------------------------------------------------------------------------
# JWT AUTHENTICATION (Required)
# ----------------------------------------------------------------------------
# Generate a secure secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change_this_to_a_secure_random_string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cookie security (set AUTH_COOKIE_SECURE=false only for local HTTP development)
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_SAMESITE=lax
# Optional cookie domain, e.g. .example.com
AUTH_COOKIE_DOMAIN=
# HSTS header (effective on HTTPS only)
ENABLE_HSTS=true
# Redirect plaintext requests to HTTPS at app layer (enable in production behind TLS proxy)
REQUIRE_HTTPS=false
# Require verified accounts for authenticated endpoints
AUTH_REQUIRE_VERIFIED=false

# ----------------------------------------------------------------------------
# LLM CONFIGURATION (Required for chat)
# ----------------------------------------------------------------------------
# Get your free API key at https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# ----------------------------------------------------------------------------
# OAUTH CONFIGURATION (Optional)
# ----------------------------------------------------------------------------
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Base URL for OAuth redirects
OAUTH_REDIRECT_BASE=http://localhost:8001

# ----------------------------------------------------------------------------
# DEVICE CONFIGURATION
# ----------------------------------------------------------------------------
# Device for embeddings: "auto", "cuda", or "cpu"
# "auto" = use CUDA if available, otherwise CPU
DEVICE=auto

# ----------------------------------------------------------------------------
# LOGGING
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ----------------------------------------------------------------------------
# PRODUCTION SETTINGS
# ----------------------------------------------------------------------------
# Your domain name (for SSL setup)
DOMAIN_NAME=

# Email for Let's Encrypt SSL certificates
CERTBOT_EMAIL=
